.b-wx-input__wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E8E8E8;
  height: 92rpx;
  line-height: 92rpx;
}

.b-wx-input__inputting {
  font-size: 32rpx;
  line-height: 32rpx;
  color: #2E3642;
  flex: 1 0 auto;
}

.b-wx-input__clear {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx 20rpx;
  flex: 0 0 auto;
}

.b-wx-input__password-switch {
  width: 32rpx;
  height: 32rpx;  
  padding: 10rpx 20rpx;
  flex: 0 0 auto;
}

.input-placeholder {
  font-size: 32rpx;
  color: #D4D6D9;
}